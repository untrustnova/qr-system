APP_NAME=QRAbsence
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,stderr
LOG_LEVEL=debug

# --------------------------------------------------------------------------
# Database Configuration
# --------------------------------------------------------------------------

# Option 1: Local (SQLite - Default)
DB_CONNECTION=sqlite

# Option 2: Local (MySQL/MariaDB)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=qr_system
# DB_USERNAME=root
# DB_PASSWORD=

# Option 3: Laravel Sail (MariaDB)
# DB_CONNECTION=mysql
# DB_HOST=mariadb
# DB_PORT=3306
# DB_DATABASE=db_qr_system
# DB_USERNAME=sail
# DB_PASSWORD=password
# FORWARD_DB_PORT=3307

# --------------------------------------------------------------------------
# Session, Cache, Queue
# --------------------------------------------------------------------------

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Use 'redis' if Redis is available, otherwise 'file' or 'database'
CACHE_STORE=redis
QUEUE_CONNECTION=redis
FILESYSTEM_DISK=local

# --------------------------------------------------------------------------
# Redis Configuration
# --------------------------------------------------------------------------

REDIS_CLIENT=predis

# Local
REDIS_HOST=127.0.0.1

# Sail
# REDIS_HOST=redis

REDIS_PASSWORD=null
REDIS_PORT=6379

# --------------------------------------------------------------------------
# Octane Configuration
# --------------------------------------------------------------------------

OCTANE_SERVER=frankenphp
OCTANE_HTTPS=false

TELESCOPE_ENABLED=true

# --------------------------------------------------------------------------
# Broadcasting (Reverb)
# --------------------------------------------------------------------------

BROADCAST_CONNECTION=reverb
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# --------------------------------------------------------------------------
# Integrations & Mail
# --------------------------------------------------------------------------

WHATSAPP_API_BASE_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_API_TIMEOUT=10

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# --------------------------------------------------------------------------
# AWS (Optional)
# --------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
